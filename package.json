{
  "name": "hello-world",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.8.0",
  "description": "Autonomous AI workspace â€” a computer for Claude to operate from",
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/app"
  ],
  "scripts": {
    "build": "turbo build",
    "build:ts": "turbo build --filter=@hello-world/core --filter=@hello-world/cli",
    "dev": "turbo dev",
    "app": "npm run build:ts && npm run --workspace=packages/app dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "format": "biome format . --write",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  }
}
